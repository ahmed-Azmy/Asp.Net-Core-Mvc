@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="form">
    <div class="text-center mb-5"><h1>Register Page</h1></div>
    <form class="register-form mx-5" asp-action="Register">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <input type="email" class="form-control" asp-for="Email" placeholder="Email" />
        </div>
        <div class="form-group">
            <input type="password" class="form-control" asp-for="Password" placeholder="password" />
        </div>
        <div class="form-group">
            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="password" />
        </div>       
        <div class="form-group form-check">
            <input type="checkbox" asp-for="IsAgree" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">I Agree To The Terms & Conditions</label>
        </div>
        <button type="submit" class="btn btn-primary px-4">Create</button>
        <p class="my-3">Already registered? <a asp-action="Login">Sign In</a></p>
    </form>
</div>

