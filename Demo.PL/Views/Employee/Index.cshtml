@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All Employee</h1>
<br />
<a asp-action="Create" asp-controller="Employee" class="btn btn-primary btn-lg">Create new Employee</a>
<br />
<br />
<form class="my-3" asp-action="Index" asp-controller="Employee">
    <div class="row">
        <div class="col-9">
            <input class="form-control" placeholder="Search By Name" name="SearchValue"/>
        </div>
        <div class="col-3">
            <input type="submit" class="btn btn-success btn-block" value="Search "/>
        </div>
    </div>
</form>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Image)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.Salary)</th>
                <th>@Html.DisplayNameFor(D => D.Address)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(D => D.Department)</th>
                <th>@Html.DisplayNameFor(D => D.IsActive)</th>
                <th>@Html.DisplayNameFor(D => D.HireDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>
                        <img src="~/files/imgs/@employee.ImageName" class="img-fluid rounded" width="40" , height="40" />
                    </td>
                    <td>@employee.Age</td>
                    @*<td>@employee.Salary</td>*@
                    <td>@Html.DisplayFor(M => @employee.Salary)</td>
                    <td>@employee.Address</td>
                    <td>@Html.DisplayFor(M => @employee.Email)</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@Html.DisplayFor(M => @employee.Department.Name)</td>
                    <td>@employee.IsActive</td>
                    <td>@employee.HireDate</td>
                    <partial name="_ButtonPartialView" model="@employee.Id.ToString()"/>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <p class="m-0 text-danger">There Is No Employee!</p>
    </div>
}

