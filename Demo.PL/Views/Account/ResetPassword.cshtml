@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="form">
    <div class="text-center mb-5"><h1>Reset Password Page</h1></div>
    <form class="register-form mx-5" asp-action="ResetPassword">
        <div asp-validation-summary="All"></div>
        <input type="hidden" asp-for="Email" />
        <input type="hidden" asp-for="Token" />
        <div class="form-group">
            <input type="password" class="form-control" asp-for="Password" placeholder="New Password" />
        </div>
        <div class="form-group">
            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm New Password" />
        </div>       
        <button type="submit" class="btn btn-primary px-4">Reset Password</button> 
    </form>
</div>

