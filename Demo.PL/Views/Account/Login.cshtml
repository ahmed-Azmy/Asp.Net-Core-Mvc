@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="form">
    <div class="text-center mb-5"><h1>LOGIN PAGE</h1></div>
    <form asp-action="Login">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <input type="email" asp-for="Email" placeholder="name" class="form-control" />
        </div>
        <div class="form-group">
            <input type="password" asp-for="Password" placeholder="password" class="form-control" />
        </div>       
        <div class="form-group form-check">
            <input type="checkbox" asp-for="RememberMe" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Remmber Me</label>
        </div>
        <button type="submit" class="btn btn-primary px-5 py-2">Login</button>
        <p class="message my-3"><a asp-action="ForgetPassword">Forget Password</a></p>
        <p class="message my-3">Don't Have Account? <a asp-action="Register">Sign Up</a></p>
    </form>
</div>

